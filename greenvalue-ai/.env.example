# ============================================================
# GREENVALUE AI - Environment Variables
# Copy to .env and fill in your values
# ============================================================

# --- Application ---
APP_ENV=development
LOG_LEVEL=DEBUG

# --- PostgreSQL + PostGIS (Layer 5) ---
POSTGRES_USER=greenvalue
POSTGRES_PASSWORD=greenvalue_secret
POSTGRES_DB=greenvalue

# --- Redis (Cache & Queue) ---
# No auth needed for local dev, Redis Stack default

# --- MinIO S3 (Layer 6) ---
MINIO_ROOT_USER=greenvalue
MINIO_ROOT_PASSWORD=greenvalue_secret

# --- JWT Auth ---
JWT_SECRET=greenvalue_jwt_secret_change_me_in_production
JWT_EXPIRATION=7d

# --- AI Engine (Layer 4) ---
# YOLO Model: n=Nano, s=Small, m=Medium, l=Large, x=Extra Large
# RTX 5070 Ti -> use 'x' | GTX 1650 Ti -> use 'm'
YOLO_MODEL_SIZE=m

# VRAM Management (adjust based on GPU)
# RTX 5070 Ti (16GB): max_split_size_mb:512
# GTX 1650 Ti (4GB): max_split_size_mb:128
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:256

# --- Monitoring (Layer 7) ---
GRAFANA_USER=admin
GRAFANA_PASSWORD=greenvalue

# --- NestJS Backend ---
NODE_ENV=development
ENABLE_SWAGGER=true
